{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.autoSave": "onFocusChange",
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always",
    "source.organizeImports": "always"
  },
  "local-history.enabled": 1, // Only inside workspace (to avoid writing history on single files outside the project)
  "local-history.daysLimit": 60, // Store histories for 60 days
  "local-history.maxDisplay": 20, // Show 20 latest versions when calling history
  "local-history.saveDelay": 0, // Save instantly when saving a file
  "local-history.dateLocale": "en-GB", // Date format (you can choose your own)
  "local-history.exclude": [
    ".git/**",
    "node_modules/**",
    "vendor/**",
    "tmp/**",
    "log/**",
    "coverage/**",
    ".history/**",
    ".vscode/**"
  ],
  "local-history.treeLocation": "explorer",
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnType": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[erb]": {
    "editor.defaultFormatter": "manuelpuyol.erb-linter",
    "editor.formatOnSave": true
  },
  "[haml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "wilfison.haml-all"
  },
  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.formatOnSave": true,
  }
}
